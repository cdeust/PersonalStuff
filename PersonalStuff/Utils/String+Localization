extension String {
    init(_ string: String, comment: String) {
        self = NSLocalizedString(string, comment: comment)
    }
    
    init(_ key: String, tableName: String?, bundle: Bundle, value: String, comment: String) {
        self = NSLocalizedString(key, tableName: tableName, bundle: bundle, value: value, comment: comment)
    }
}
